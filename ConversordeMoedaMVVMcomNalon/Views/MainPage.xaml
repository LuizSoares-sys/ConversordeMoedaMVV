<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConversordeMoedaMVVMcomNalon.Views.MainPage"
             Title="MainPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="14">

            <Label Text="Conversor De Moedas" FontSize="24"
               FontAttributes="Bold"/>

            <Entry Placeholder="Valor" Keyboard="Numeric"
               Text="{Binding AmountText, Mode=TwoWay}"/>

            <Grid ColumnDefinitions="*,Auto,*"
              ColumnSpacing="8">
                <Picker Grid.Column="8"
                    Title="De"
                    ItemsSource="{Binding Currencies}"
                    SelectedItem="{Binding To, Mode=TwoWay}"/>
            </Grid>
            <Button Text="Converter" Command="{Binding ConvertCommand}"/>
            <Button Text="Limpar" Command="{Binding ClearCommand}"/>
            <Frame Padding="16" HasShadow="False">
                <Label Text="{Binding Result}" FontSize="18"
                   FontAttributes="Bold" HorizontalOptions="Center"/>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>